        let currentQuestion = 0;
        let answers = {};
        let currentCard = '';
        let testResult = null;

        // éªŒè¯å¡å¯†
        function verifyCard() {
            const cardCode = document.getElementById('cardCode').value.trim().toUpperCase();
            const errorDiv = document.getElementById('errorMessage');

            if (!cardCode) {
                errorDiv.textContent = 'è¯·è¾“å…¥å¡å¯†';
                errorDiv.style.display = 'block';
                return;
            }

            // ä»localStorageè·å–å¡å¯†åˆ—è¡¨
            const cards = JSON.parse(localStorage.getItem('talentCards') || '[]');
            const card = cards.find(c => c.code === cardCode);

            if (!card) {
                errorDiv.textContent = 'å¡å¯†ä¸å­˜åœ¨';
                errorDiv.style.display = 'block';
                return;
            }

            if (card.used) {
                errorDiv.textContent = 'è¯¥å¡å¯†å·²è¢«ä½¿ç”¨';
                errorDiv.style.display = 'block';
                return;
            }

            // éªŒè¯æˆåŠŸ,ä¿å­˜å½“å‰å¡å¯†
            currentCard = cardCode;
            sessionStorage.setItem('currentCard', cardCode);

            // å¼€å§‹æµ‹è¯„
            document.getElementById('verifyPage').style.display = 'none';
            document.getElementById('testPage').style.display = 'block';
            showQuestion();
        }

        // ç®¡ç†å‘˜é¢æ¿
        function showAdminPanel() {
            const password = prompt('è¯·è¾“å…¥ç®¡ç†å‘˜å¯†ç :');
            if (password === 'lss900201') {
                showCardManagement();
            } else if (password !== null) {
                alert('å¯†ç é”™è¯¯');
            }
        }

        function showCardManagement() {
            const count = prompt('ç”Ÿæˆå¤šå°‘ä¸ªå¡å¯†?(1-100)');
            if (!count || count < 1 || count > 100) return;

            const cards = JSON.parse(localStorage.getItem('talentCards') || '[]');
            const newCards = [];

            for (let i = 0; i < parseInt(count); i++) {
                const code = generateCardCode();
                cards.push({
                    code: code,
                    used: false,
                    createdAt: new Date().toISOString()
                });
                newCards.push(code);
            }

            localStorage.setItem('talentCards', JSON.stringify(cards));

            const result = newCards.join('\n');
            const download = confirm(`ç”ŸæˆæˆåŠŸ!\n\n${result}\n\næ˜¯å¦ä¸‹è½½å¡å¯†åˆ—è¡¨?`);
            
            if (download) {
                downloadCards(newCards);
            } else {
                alert('è¯·å¤åˆ¶ä¿å­˜å¡å¯†:\n\n' + result);
            }
        }

        function generateCardCode() {
            const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ23456789';
            let code = 'TF-';
            for (let i = 0; i < 4; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            code += '-';
            for (let i = 0; i < 4; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return code;
        }

        function downloadCards(cards) {
            const text = cards.join('\n');
            const blob = new Blob([text], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'æµ‹è¯„å¡å¯†-' + new Date().toISOString().split('T')[0] + '.txt';
            a.click();
            URL.revokeObjectURL(url);
        }

        function showQuestion() {
            const question = questions[currentQuestion];
            const progress = ((currentQuestion) / questions.length) * 100;
            
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('progressText').textContent = `ç¬¬ ${currentQuestion + 1} / ${questions.length} é¢˜`;

            const card = document.getElementById('questionCard');
            card.innerHTML = `
                <div class="question-number">é—®é¢˜ ${currentQuestion + 1}/${questions.length}</div>
                <div class="question-text">${question.text}</div>
                <div class="options" id="options">
                    ${question.options.map((opt, idx) => `
                        <div class="option" onclick="selectOption(${idx})" data-value="${idx}">
                            ${opt}
                        </div>
                    `).join('')}
                </div>
                <div class="buttons">
                    ${currentQuestion > 0 ? '<button class="btn-prev" onclick="prevQuestion()">ä¸Šä¸€é¢˜</button>' : '<div></div>'}
                    <button class="btn-next" id="nextBtn" onclick="nextQuestion()" disabled>
                        ${currentQuestion < questions.length - 1 ? 'ä¸‹ä¸€é¢˜' : 'å®Œæˆæµ‹è¯„'}
                    </button>
                </div>
            `;

            if (answers[question.id] !== undefined) {
                const options = document.querySelectorAll('.option');
                options[answers[question.id]].classList.add('selected');
                document.getElementById('nextBtn').disabled = false;
            }
        }

        function selectOption(value) {
            const question = questions[currentQuestion];
            answers[question.id] = value;

            document.querySelectorAll('.option').forEach(opt => opt.classList.remove('selected'));
            event.target.classList.add('selected');
            document.getElementById('nextBtn').disabled = false;
        }

        function prevQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                showQuestion();
            }
        }

        function nextQuestion() {
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                showQuestion();
            } else {
                completeTest();
            }
        }

        function completeTest() {
            const scores = {};
            const dimensionCounts = {};

            questions.forEach(q => {
                const answer = answers[q.id];
                if (answer !== undefined) {
                    if (!scores[q.dimension]) {
                        scores[q.dimension] = 0;
                        dimensionCounts[q.dimension] = 0;
                    }
                    scores[q.dimension] += (answer + 1) * 4;
                    dimensionCounts[q.dimension]++;
                }
            });

            // æ ‡è®°å¡å¯†å·²ä½¿ç”¨
            const cards = JSON.parse(localStorage.getItem('talentCards') || '[]');
            const cardIndex = cards.findIndex(c => c.code === currentCard);
            if (cardIndex !== -1) {
                cards[cardIndex].used = true;
                cards[cardIndex].usedAt = new Date().toISOString();
                localStorage.setItem('talentCards', JSON.stringify(cards));
            }

            testResult = {
                cardCode: currentCard,
                scores: scores,
                answers: answers,
                completedAt: new Date().toISOString()
            };

            sessionStorage.setItem('testResult', JSON.stringify(testResult));
            showResult();
        }

        function showResult() {
            document.getElementById('testPage').style.display = 'none';
            document.getElementById('resultPage').style.display = 'block';

            const result = testResult || JSON.parse(sessionStorage.getItem('testResult'));
            const scores = result.scores;

            const sortedScores = Object.entries(scores).sort((a, b) => b[1] - a[1]);
            const top3 = sortedScores.slice(0, 3).map(s => dimensionNames[s[0]]);

            document.getElementById('resultName').textContent = `ä½ æœ€å…·æœ‰ ${top3.join('ã€')} å¤©èµ‹`;

            drawRadarChart('radarChart', scores);

            const scoresGrid = document.getElementById('scoresGrid');
            scoresGrid.innerHTML = '';
            Object.keys(dimensionNames).forEach(dim => {
                scoresGrid.innerHTML += `
                    <div class="score-item">
                        <span class="score-label">${dim}. ${dimensionNames[dim]}</span>
                        <span class="score-value">${scores[dim]}åˆ†</span>
                    </div>
                `;
            });

            window.scrollTo(0, 0);
        }

        function drawRadarChart(canvasId, scores) {
            const ctx = document.getElementById(canvasId);
            const labels = Object.keys(dimensionNames).map(k => dimensionNames[k]);
            const data = Object.keys(dimensionNames).map(k => scores[k]);

            new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'å¤©èµ‹å¾—åˆ†',
                        data: data,
                        backgroundColor: 'rgba(255, 140, 0, 0.2)',
                        borderColor: 'rgba(255, 140, 0, 1)',
                        borderWidth: 3,
                        pointBackgroundColor: 'rgba(255, 140, 0, 1)',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            beginAtZero: true,
                            min: 0,
                            max: 20,
                            ticks: {
                                stepSize: 5,
                                font: { size: 12 }
                            },
                            pointLabels: {
                                font: { size: 14, weight: 'bold' },
                                color: '#333'
                            }
                        }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });
        }

        function handlePaymentProof(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('previewImage');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    
                    setTimeout(() => {
                        showDetailedReport();
                    }, 1000);
                };
                reader.readAsDataURL(file);
            }
        }

        function showDetailedReport() {
            document.getElementById('resultPage').style.display = 'none';
            document.getElementById('detailedPage').style.display = 'block';

            const result = testResult || JSON.parse(sessionStorage.getItem('testResult'));
            const scores = result.scores;
            const sortedScores = Object.entries(scores).sort((a, b) => b[1] - a[1]);
            const top3 = sortedScores.slice(0, 3).map(s => dimensionNames[s[0]]);

            document.getElementById('detailedName').textContent = `ä½ æœ€å…·æœ‰ ${top3.join('ã€')} å¤©èµ‹`;

            drawRadarChart('radarChart2', scores);

            document.getElementById('overallAnalysis').innerHTML = `
                <p>æ ¹æ®ä½ çš„æµ‹è¯„ç»“æœ,ä½ åœ¨<strong>${top3.join('ã€')}</strong>æ–¹é¢è¡¨ç°çªå‡ºã€‚</p>
                <div class="highlight-box">
                    <strong>æ ¸å¿ƒç‰¹è´¨:</strong> ä½ çš„å¤©èµ‹ç»„åˆè¡¨æ˜ä½ æ˜¯ä¸€ä¸ª${getPersonalityType(sortedScores[0][0])}çš„äºº,åœ¨ç›¸å…³é¢†åŸŸæœ‰å¤©ç„¶çš„ä¼˜åŠ¿ã€‚
                </div>
            `;

            document.getElementById('careerAdvice').innerHTML = getCareerRecommendations(sortedScores);
            document.getElementById('strengthsAnalysis').innerHTML = getStrengthAnalysis(sortedScores);
            document.getElementById('growthPath').innerHTML = getGrowthPath(sortedScores);

            window.scrollTo(0, 0);
        }

        function getPersonalityType(dimension) {
            const types = {
                'A': 'ç©ºé—´æ„ŸçŸ¥åŠ›å¼º',
                'B': 'è¯­è¨€è¡¨è¾¾èƒ½åŠ›å‡ºä¼—',
                'C': 'é€»è¾‘æ€ç»´ç¼œå¯†',
                'D': 'è§†è§‰è‰ºæœ¯æ•æ„Ÿ',
                'E': 'å®¡ç¾èƒ½åŠ›ä¼˜ç§€',
